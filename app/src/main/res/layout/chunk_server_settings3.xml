<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ARmirrorS.Activities.ServerClientSelection">

    <ImageView
        android:id="@+id/serverSettings3SliderImageTopChunk"
        android:layout_width="304dp"
        android:layout_height="301dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="62dp"
        android:contentDescription="@string/server"
        android:src="@drawable/ic_server_settings2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ServerSettings3SliderHeading"
        android:layout_width="237dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/bauhaus"
        android:text="@string/cameraresolution"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/serverSettings3SliderImageTopChunk"
        app:layout_constraintStart_toStartOf="@+id/serverSettings3SliderImageTopChunk"
        app:layout_constraintTop_toBottomOf="@+id/serverSettings3SliderImageTopChunk"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/ServerSettings2SliderText"
        android:layout_width="346dp"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/consolab"
        android:text="@string/camerdescription"
        android:textAlignment="center"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="@+id/ServerSettings3SliderHeading"
        app:layout_constraintStart_toStartOf="@+id/ServerSettings3SliderHeading"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupCameraForB3"
        app:layout_constraintVertical_bias="0.361" />

    <RadioGroup
        android:id="@+id/radioGroupCameraForB3"
        android:layout_width="309dp"
        android:layout_height="112dp"
        android:layout_marginTop="86dp"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="@+id/serverSettings3SliderImageTopChunk"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/serverSettings3SliderImageTopChunk"
        app:layout_constraintTop_toBottomOf="@+id/serverSettings3SliderImageTopChunk"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/res640x480"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/consolab"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:text="640 x 480 mode"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/resMax"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/consolab"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:text="Maximum Supported"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="24sp" />

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
