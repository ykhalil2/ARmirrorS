<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ARmirrorS.Activities.ServerClientSelection">

    <ImageView
        android:id="@+id/clientSettings2SliderImageTopChunk"
        android:layout_width="304dp"
        android:layout_height="301dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="62dp"
        android:contentDescription="@string/client"
        android:src="@drawable/ic_clients_settings4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clientSettings2SliderHeading"
        android:layout_width="237dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/bauhaus"
        android:text="@string/detection_method"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/clientSettings2SliderImageTopChunk"
        app:layout_constraintStart_toStartOf="@+id/clientSettings2SliderImageTopChunk"
        app:layout_constraintTop_toBottomOf="@+id/clientSettings2SliderImageTopChunk"
        app:textAllCaps="false" />


    <TextView
        android:id="@+id/clientSettings2SliderText"
        android:layout_width="346dp"
        android:layout_height="64dp"
        android:fontFamily="@font/consolab"
        android:text="@string/detection_method_description"
        android:textAlignment="center"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/clientSettings2SliderHeading"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/clientSettings2SliderHeading"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupDetection"
        app:layout_constraintVertical_bias="0.473" />

    <RadioGroup
        android:id="@+id/radioGroupDetection"
        android:layout_width="318dp"
        android:layout_height="171dp"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="@+id/clientSettings2SliderImageTopChunk"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/clientSettings2SliderImageTopChunk"
        app:layout_constraintTop_toBottomOf="@+id/clientSettings2SliderHeading"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/augmentedImage"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/consolab"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:text="Augmented Image"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/verticalPlane"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/consolab"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:text="Vertical Plane"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/horizontalPlane"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/camera_selector"
            android:button="@android:color/transparent"
            android:fontFamily="@font/consolab"
            android:gravity="center_vertical"
            android:paddingStart="48dp"
            android:text="Horizontal Plane"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="24sp" />

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
